    <coin-master.test-dependencies.version>2.7.0-SNAPSHOT</coin-master.test-dependencies.version>
    <coin-api-serviceregistry.version>2.7.0-SNAPSHOT</coin-api-serviceregistry.version>
    <spring-security-opensaml.version>2.6.0-SNAPSHOT</spring-security-opensaml.version>
    <spring-security.version>3.1.0.RELEASE</spring-security.version>
